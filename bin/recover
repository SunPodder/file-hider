#!/usr/bin/bash

blue="\e[1;34m"
white="\e[0m"
red="\e[1;31m"
yellow="\e[1;33m"
big="\033[1m"

help="${big}Recover hidden files from an image.

${yellow}Usage:$white recover [path to image]

${red}path to image:$white the image where you have hidden your files previously.
"

if [[ "$1" == "--help" || "$1" == "-h" ]]
then
printf "$help"
elif [[ -z $1 ]]
then
printf "${yellow}Usage:$white recover [path to image]
Type hide -h or hide --help for more info.
"
else
unzip $1 > /dev/null 2>&1
fi
